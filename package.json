{
  "name": "express-typescript-starter",
  "version": "1.1.2",
  "author": "rjmacarthy",
  "private": false,
  "scripts": {
    "dev": "npm run build && concurrently --kill-others \"tsc -w -p src\" \"nodemon dist/index.js -e ts\"",
    "debug": "npm run build && concurrently --kill-others \"tsc -w -p src\" \"nodemon --inspect dist/index.js -e ts\"",
    "test:watch": "mocha -w ./spec/**/*.spec.ts --watch-extensions ts",
    "test": "mocha -w ./spec/**/*.spec.ts",
    "build": "tsc -p src",
    "start": "node dist/index.js",
    "build:docker": "docker build -t rjmacarthy/express-typescript-starter .",
    "docker:compose": "docker-compose up",
    "format": "prettier --write 'src/**/*ts'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:test": "tslint -c tslint.json 'spec/**/*.ts'",
    "format:test": "prettier --write 'spec/**/*ts'"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "cookie-parser": "~1.4.6",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "fresh": "^0.5.2",
    "glob": "^8.0.3",
    "lodash": "^4.17.21",
    "minimist": "^1.2.6",
    "mongoose": "^6.4.6",
    "morgan": "^1.10.0",
    "negotiator": "^0.6.3",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "socket.io": "^4.6.1",
    "tslint-config-prettier": "^1.18.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@types/sinon": "^10.0.11",
    "@types/socket.io": "^3.0.1",
    "chai": "^4.3.6",
    "concurrently": "^7.2.1",
    "mocha": "^10.0.0",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.6.2",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.0",
    "tslint": "^5.20.1",
    "typescript": "^4.7.2"
  }
}
